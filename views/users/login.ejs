<% layout('/layouts/boilerplate') -%>
<form class="row g-3 mt-3 needs-validation offset-2"  method="post" action="/login"  novalidate>
    <h1>Login on WanderLust</h1>
    <div class="col-10">
        <label class="form-label" for="username">Username</label>
        <div class="input-group">
          <div class="input-group-text">@</div>
          <input type="text" class="form-control" name="username" id="username" autocomplete="username" placeholder="Username" required>
        </div>
    </div>
      <div class="col-10">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" name="password" id="password" placeholder="Enter strong password" required>
      </div>
    <div class="col-12">
      <button type="submit" class="btn btn-primary">Login</button>
    </div></div>
  </form>